/* 全局样式 - 可爱风格 */
page {
  background: linear-gradient(135deg, #FFB6C1 0%, #FFC0CB 50%, #FFE4E1 100%);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
}

.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  box-sizing: border-box;
}

.btn {
  background: linear-gradient(45deg, #FF69B4, #FFB6C1);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 20rpx rgba(255, 105, 180, 0.3);
  transition: all 0.3s ease;
}

.btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 10rpx rgba(255, 105, 180, 0.3);
}

.card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 40rpx;
  margin: 20rpx;
  box-shadow: 0 10rpx 30rpx rgba(255, 105, 180, 0.2);
  backdrop-filter: blur(10rpx);
  border: 3rpx solid #FFB6C1;
}

.text-center {
  text-align: center;
}

.mt-20 {
  margin-top: 20rpx;
}

.mb-20 {
  margin-bottom: 20rpx;
}

/* 可爱动画效果 */
@keyframes bounce {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10rpx);
  }
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
}

@keyframes float {
  0%, 100% {
    transform: translateY(0px) rotate(0deg);
  }
  50% {
    transform: translateY(-20rpx) rotate(180deg);
  }
}

/* 可爱装饰元素 */
.cute-decoration {
  position: relative;
}

.cute-decoration::before,
.cute-decoration::after {
  content: '🌸';
  position: absolute;
  font-size: 20rpx;
  opacity: 0.6;
  animation: float 3s ease-in-out infinite;
}

.cute-decoration::before {
  left: -30rpx;
  top: 50%;
  transform: translateY(-50%);
}

.cute-decoration::after {
  right: -30rpx;
  top: 50%;
  transform: translateY(-50%);
  animation-delay: 1.5s;
} 