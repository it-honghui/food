/* 食物列表页面样式 - 可爱风格 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #FFB6C1 0%, #FFC0CB 50%, #FFE4E1 100%);
  padding: 20rpx;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}

/* 可爱装饰背景 */
.cute-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 0;
}

.floating-heart, .floating-star, .floating-sparkle {
  position: absolute;
  font-size: 30rpx;
  opacity: 0.3;
  animation: float 4s ease-in-out infinite;
}

.floating-heart {
  top: 10%;
  left: 10%;
  animation-delay: 0s;
}

.floating-star {
  top: 20%;
  right: 15%;
  animation-delay: 1s;
}

.floating-sparkle {
  top: 30%;
  left: 20%;
  animation-delay: 2s;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0px) rotate(0deg);
  }
  50% {
    transform: translateY(-30rpx) rotate(180deg);
  }
}

/* 标题区域 */
.header {
  text-align: center;
  margin-bottom: 30rpx;
  z-index: 1;
  position: relative;
}

.title-container {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 15rpx;
}

.cute-icon {
  font-size: 40rpx;
  margin: 0 15rpx;
  animation: bounce 2s ease-in-out infinite;
}

@keyframes bounce {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10rpx);
  }
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #FF69B4;
  text-shadow: 0 4rpx 8rpx rgba(255, 105, 180, 0.3);
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 24rpx;
  color: #FF69B4;
  background: rgba(255, 255, 255, 0.8);
  padding: 8rpx 24rpx;
  border-radius: 24rpx;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 4rpx 15rpx rgba(255, 105, 180, 0.2);
}

/* 功能按钮区域 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
  z-index: 1;
  position: relative;
}

.action-btn {
  flex: 1;
  border-radius: 50rpx;
  padding: 20rpx;
  font-size: 28rpx;
  font-weight: bold;
  transition: all 0.3s ease;
  border: none;
  position: relative;
  overflow: hidden;
}

.add-btn {
  background: linear-gradient(45deg, #FF69B4, #FFB6C1);
  color: white;
  box-shadow: 0 8rpx 20rpx rgba(255, 105, 180, 0.3);
}

.reset-btn {
  background: rgba(255, 255, 255, 0.9);
  color: #FF69B4;
  border: 3rpx solid #FFB6C1;
  box-shadow: 0 8rpx 20rpx rgba(255, 105, 180, 0.2);
}

.action-btn:active {
  transform: translateY(2rpx);
}

.btn-content {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}

.btn-icon {
  font-size: 24rpx;
}

.btn-text {
  font-size: 24rpx;
}

/* 搜索框 */
.search-container {
  margin-bottom: 30rpx;
  position: relative;
  z-index: 1;
}

.search-icon {
  position: absolute;
  left: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 28rpx;
  color: #FF69B4;
  z-index: 2;
}

.search-input {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50rpx;
  padding: 20rpx 30rpx 20rpx 60rpx;
  font-size: 28rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
  border: 3rpx solid #FFB6C1;
}

/* 分类标签 */
.category-tabs {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50rpx;
  padding: 8rpx;
  backdrop-filter: blur(10rpx);
  z-index: 1;
  position: relative;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 16rpx 20rpx;
  font-size: 24rpx;
  color: rgba(255, 105, 180, 0.8);
  border-radius: 40rpx;
  transition: all 0.3s ease;
}

.tab.active {
  background: rgba(255, 255, 255, 0.9);
  color: #FF69B4;
  font-weight: bold;
  box-shadow: 0 4rpx 15rpx rgba(255, 105, 180, 0.2);
}

/* 食物列表 */
.food-list {
  height: calc(100vh - 500rpx);
  margin-bottom: 20rpx;
  z-index: 1;
  position: relative;
}

.food-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 10rpx;
}

.food-item {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
  animation: fadeIn 0.5s ease-out;
  border: 2rpx solid #FFB6C1;
  position: relative;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.food-item:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.15);
}

.food-emoji {
  font-size: 48rpx;
  margin-bottom: 15rpx;
}

.food-name {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
  line-height: 1.2;
  margin-bottom: 15rpx;
}

.food-actions {
  display: flex;
  justify-content: center;
  gap: 15rpx;
  margin-top: 10rpx;
}

.action-icon {
  font-size: 24rpx;
  padding: 8rpx;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.edit-icon {
  background: rgba(255, 193, 7, 0.2);
  color: #FF9800;
}

.delete-icon {
  background: rgba(244, 67, 54, 0.2);
  color: #F44336;
}

.action-icon:active {
  transform: scale(0.9);
}

/* 统计信息 */
.stats {
  text-align: center;
  color: #FF69B4;
  font-size: 24rpx;
  background: rgba(255, 255, 255, 0.8);
  padding: 15rpx;
  border-radius: 25rpx;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 4rpx 15rpx rgba(255, 105, 180, 0.2);
  z-index: 1;
  position: relative;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  backdrop-filter: blur(5rpx);
  padding: 40rpx;
  box-sizing: border-box;
}

.modal-content {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 30rpx;
  padding: 40rpx;
  width: 100%;
  max-width: 600rpx;
  max-height: 80vh;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.2);
  backdrop-filter: blur(10rpx);
  border: 3rpx solid #FFB6C1;
  animation: modalSlideIn 0.3s ease-out;
  overflow-y: auto;
}

@keyframes modalSlideIn {
  from {
    opacity: 0;
    transform: translateY(50rpx) scale(0.9);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #FFB6C1;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #FF69B4;
}

.modal-close {
  font-size: 40rpx;
  color: #FF69B4;
  padding: 10rpx;
  border-radius: 50%;
  background: rgba(255, 105, 180, 0.1);
  transition: all 0.3s ease;
}

.modal-close:active {
  background: rgba(255, 105, 180, 0.2);
  transform: scale(0.9);
}

.modal-body {
  margin-bottom: 30rpx;
}

.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  font-size: 28rpx;
  color: #FF69B4;
  margin-bottom: 15rpx;
  font-weight: bold;
}

.modal-input {
  background: rgba(255, 255, 255, 0.8);
  border: 2rpx solid #FFB6C1;
  border-radius: 15rpx;
  padding: 20rpx;
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
  min-height: 60rpx;
  line-height: 1.5;
}

.category-picker {
  background: rgba(255, 255, 255, 0.8);
  border: 2rpx solid #FFB6C1;
  border-radius: 15rpx;
  padding: 20rpx;
  min-height: 60rpx;
  display: flex;
  align-items: center;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
}

.modal-btn {
  flex: 1;
  border-radius: 25rpx;
  padding: 20rpx;
  font-size: 28rpx;
  font-weight: bold;
  transition: all 0.3s ease;
  border: none;
}

.cancel-btn {
  background: rgba(255, 255, 255, 0.8);
  color: #FF69B4;
  border: 2rpx solid #FFB6C1;
}

.confirm-btn {
  background: linear-gradient(45deg, #FF69B4, #FFB6C1);
  color: white;
  box-shadow: 0 8rpx 20rpx rgba(255, 105, 180, 0.3);
}

.modal-btn:active {
  transform: translateY(2rpx);
} 