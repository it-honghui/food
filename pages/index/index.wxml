<view class="container" style="background: {{currentTheme.background}}">
  <!-- 可爱装饰背景 -->
  <view class="cute-bg">
    <view class="floating-heart">💖</view>
    <view class="floating-star">⭐</view>
    <view class="floating-sparkle">✨</view>
    <view class="floating-heart">💕</view>
    <view class="floating-star">🌟</view>
  </view>

  <!-- 标题区域 -->
  <view class="header">
    <view class="title-container">
      <view class="cute-icon">🍰</view>
      <view class="title">今天吃什么</view>
      <view class="cute-icon">🍰</view>
    </view>
    <view class="subtitle">小耳朵专属</view>
    <view class="cute-decoration">🌸 让选择变得有趣 🌸</view>
  </view>

  <!-- 小耳朵专属功能 -->
  <view class="cute-functions">
    <button class="cute-btn praise-btn" bindtap="praiseLittleEar" style="background: linear-gradient(45deg, {{currentTheme.primary}}, {{currentTheme.secondary}})">
      <view class="btn-content">
        <view class="btn-icon">💝</view>
        <view class="btn-text">夸夸小耳朵</view>
      </view>
    </button>
    
    <button class="cute-btn joke-btn" bindtap="tellJoke" style="background: linear-gradient(45deg, {{currentTheme.primary}}, {{currentTheme.secondary}})">
      <view class="btn-content">
        <view class="btn-icon">😄</view>
        <view class="btn-text">讲个笑话</view>
      </view>
    </button>
  </view>

  <!-- 转盘区域 -->
  <view class="wheel-container">
    <view class="wheel-border">
      <view class="wheel" style="transform: rotate({{wheelRotation}}deg)">
        <!-- 彩色转盘背景 -->
        
        <!-- 转盘边缘装饰 -->
        <view class="wheel-ornaments">
          <view class="ornament" style="transform: rotate(0deg)">🌸</view>
          <view class="ornament" style="transform: rotate(30deg)">🌟</view>
          <view class="ornament" style="transform: rotate(60deg)">💖</view>
          <view class="ornament" style="transform: rotate(90deg)">✨</view>
          <view class="ornament" style="transform: rotate(120deg)">💕</view>
          <view class="ornament" style="transform: rotate(150deg)">🎀</view>
          <view class="ornament" style="transform: rotate(180deg)">🌸</view>
          <view class="ornament" style="transform: rotate(210deg)">🌟</view>
          <view class="ornament" style="transform: rotate(240deg)">💖</view>
          <view class="ornament" style="transform: rotate(270deg)">✨</view>
          <view class="ornament" style="transform: rotate(300deg)">💕</view>
          <view class="ornament" style="transform: rotate(330deg)">🎀</view>
        </view>
      </view>
    </view>
    
    <!-- 悬浮结果显示 -->
    <view class="floating-result" wx:if="{{showResult}}">
      <view class="result-bubble">
        <view class="result-food">{{currentFood}}</view>
        <view class="result-emoji">🍽️</view>
      </view>
    </view>
    
    <!-- 可爱指针 -->
    <view class="cute-pointer">
      <view class="pointer-arrow">🎯</view>
    </view>

    <!-- 转盘装饰 -->
    <view class="wheel-decoration">
      <view class="decoration-item">🍕</view>
      <view class="decoration-item">🍜</view>
      <view class="decoration-item">🍣</view>
      <view class="decoration-item">🍖</view>
      <view class="decoration-item">🍰</view>
      <view class="decoration-item">🍦</view>
    </view>
  </view>

  <!-- 控制按钮 -->
  <view class="controls">
    <button class="spin-btn" bindtap="spinWheel" disabled="{{isSpinning}}" style="background: linear-gradient(45deg, {{currentTheme.primary}}, {{currentTheme.secondary}})">
      <view class="btn-content">
        <view class="btn-icon">{{isSpinning ? '🎲' : '🎯'}}</view>
        <view class="btn-text">{{isSpinning ? '转盘中...' : '开始转盘'}}</view>
      </view>
    </button>
    
    <button class="list-btn" bindtap="goToFoodList" style="background: linear-gradient(45deg, {{currentTheme.primary}}, {{currentTheme.secondary}})">
      <view class="btn-content">
        <view class="btn-icon">📋</view>
        <view class="btn-text">查看所有选项</view>
      </view>
    </button>
  </view>

  <!-- 底部装饰 -->
  <view class="bottom-decoration">
    <view class="food-icon">🍕</view>
    <view class="food-icon">🍜</view>
    <view class="food-icon">🍣</view>
    <view class="food-icon">🍖</view>
    <view class="food-icon">🍰</view>
    <view class="food-icon">🍦</view>
  </view>

  <!-- 笑话弹窗 -->
  <view class="joke-modal" wx:if="{{showJokeModal}}" bindtap="hideJokeModal">
    <view class="joke-content" catchtap="stopPropagation" style="background: {{currentTheme.tertiary}}">
      <view class="joke-header">
        <view class="joke-title">😄 小耳朵专属笑话</view>
        <view class="joke-close" bindtap="hideJokeModal">✕</view>
      </view>
      <view class="joke-text">{{currentJoke}}</view>
      <view class="joke-footer">
        <button class="joke-btn" bindtap="nextJoke" style="background: linear-gradient(45deg, {{currentTheme.primary}}, {{currentTheme.secondary}})">下一个笑话</button>
      </view>
    </view>
  </view>
</view> 